# Environment Configuration Template
# Copy this file to .env for local development

# Application
REACT_APP_NAME=Industrial CRM
REACT_APP_VERSION=1.0.0

# Development Server Settings
FAST_REFRESH=true
BROWSER=none
# PORT=3000

# Environment
REACT_APP_ENV=development
REACT_APP_DEBUG=true

# Source Maps (true for development, false for production)
GENERATE_SOURCEMAP=true

# Hot Module Replacement
WDS_SOCKET_PORT=0

# Supabase Configuration
REACT_APP_SUPABASE_URL=your_supabase_project_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Calendar Integration
# Get these credentials from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
# IMPORTANT: Google Calendar uses SEPARATE OAuth flow (not Supabase OAuth)
# - API_KEY: For public API access
# - CLIENT_ID: For OAuth 2.0 user consent flow (requires calendar scopes)
REACT_APP_GOOGLE_API_KEY=your_google_api_key
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id

# Google Calendar Settings
# The shared company calendar ID for syncing events
# Format: xxxx@group.calendar.google.com
